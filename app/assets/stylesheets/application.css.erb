.content {
  padding: 5px 0 0 0;
}

.selected {
  font-weight: bold;
  color:  #fff;
}

body {
  padding-top: 55px; /* Required padding for .navbar-fixed-top. Remove if using .navbar-static-top. Change if height of navigation changes. */
  margin: 0 7%;
}

footer {
  margin: 50px 0;
}

.navbar{
  border-top: 5px solid #D62824;
}

.navbar .navbar-nav > li > a {
  color: #DDD;
}

.btn-primary {
 background-color: #D62824;
}

.btn-primary:hover, .btn-primary:focus, .btn-primary.focus, .btn-primary:active, .btn-primary.active, .open > .dropdown-toggle.btn-primary{
  background-color: #D62824;
}

.flag{
  width: 21px;
  height: 14px;
  background-image: url('<%= asset_path("flags.png") %> ');
  background-repeat: no-repeat;
  text-indent: -9999px;
  float:left;
}
.en_flag{
  background-position: -60px 0;
}
.ru_flag{
  background-position: 1px -112px;
}

