html {
  position: relative;
  min-height: 100%;
}

/*@media screen and (min-aspect-ratio: 13/9){ } // landscape and*/

body {
  /* Margin bottom by footer height */
  margin-bottom: 42px !important;
}

@media only screen and (min-width: 480px) and (max-width: 767px) {
  body {
    /* Margin bottom by footer height */
    margin-bottom: 60px !important;
  }
}

.footer {
  border-top: 2px solid red;
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  width: 100%;
  /* Set the fixed height of the footer here */
  height: 42px;
  background-color: #f5f5f5;
}

.footer .pad {
  padding: 2px 0;
}

@media only screen and (max-width: 480px) {
  .footer {
    height: 60px;
  }

  .email_text {
    display: block;
  }

  .footer .powered_by {
    padding: 15px 0;
  }
}

.images {
  text-align: center;
  border-right: 1px solid #eee;
}

.images img {
  margin: 10px;
  max-width: 100%;
  height: auto;
}

.pad_left {
  padding-left: 40px;
}

h2 {
  margin-top: 0;
}

dir-pagination-controls {
  padding: 0 10px;
}

.pagination > li {
  display: inline-block;
}

.pagination > li > a {
  float: none;
}

a.new_comment {
  display: table;
  /*margin: 20px 0;*/
  position: fixed;
  left: 0;
  top: 50%;
  max-width: calc(10% - 6px);
  min-width: 50px;
  height: 60px;
  padding: 6px 6px !important;
}

a.new_comment i, a.new_comment div {
  display: table-cell;
  vertical-align: middle;
}

a.new_comment div {
  padding: 4px;
}

a { outline: 0!important;}

.content {
  padding: 5px 0 0 0;
}

.selected {
  font-weight: bold;
  color:  #fff;
}

body {
  padding-top: 55px; /* Required padding for .navbar-fixed-top. Remove if using .navbar-static-top. Change if height of navigation changes. */
  margin: 0 7%;
}

.navbar{
  border-top: 5px solid #D62824;
}

.navbar .navbar-nav > li > a {
  color: #DDD;
  font-size: 18px;
  font-weight: bold;
}

.navbar .flags > li > a { padding: 0; float: left; }

.navbar-brand {
  font-size: 24px;
  font-weight: bold;
}

.btn-primary {
  background-color: #D62824;
}
.btn-primary:hover, .btn-primary:focus, .btn-primary.focus, .btn-primary:active, .btn-primary.active, .open > .dropdown-toggle.btn-primary{
  background-color: #D62824;
}
.flag{
  width: 44px;
  height: 44px;
  background-repeat: no-repeat;
  text-indent: -9999px;
  float:left;
  background-size: contain;
}
.en_flag{
  background-image: url('<%= asset_path("en.gif") %> ');
}
.ru_flag{
  background-image: url('<%= asset_path("ru.gif") %> ');
}

