        /h1.tagline= t('users.page_title')

.container
  hr
  .row
    .col-sm-8
      h2= t('users.about_title')
      p= t('users.about_text')
      p= t('users.about_text_appendix')
      /p
      /  a.btn.btn-default.btn-lg href="#"  Call to Action &raquo;
