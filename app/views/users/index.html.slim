      h2= t('users.contact_us.title')
      /address
      /  strong Start Bootstrap
      /  | 3481
      /  br
      /  | Melrose Place
      /  Beverly
      /  br
      /  | Hills, CA 90210
      /  br
      address
        /abbr title="Phone"
        /| P: (123) 456-7890
        /br
        abbr title=t('users.contact_us.email')
          = t('users.contact_us.email')
